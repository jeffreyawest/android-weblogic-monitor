<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightGrey"
    tools:context=".DisplayServer"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:orientation="vertical">

    <TextView
        android:id="@+id/monitor_header"
        android:text="@string/monitor_server_header"
        style="@style/DisplayEntityHeader"/>

    <!--
      Heap Chart...
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

      <fragment
          android:name="com.jeffreyawest.weblogic.monitor.charting.fragment.CPUChartFragment"
          android:id="@+id/cpu_chart_fragment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="5dp"
          tools:layout="@layout/chart_view"/>

      <fragment
          android:name="com.jeffreyawest.weblogic.monitor.charting.fragment.HeapChartFragment"
          android:id="@+id/heap_chart_fragment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="5dp"
          tools:layout="@layout/chart_view"/>
    </LinearLayout>

    <!-- TEXT DATA -->

    <TextView
        android:text="@string/server_information"
        style="@style/EntityInformationHeader"/>

    <LinearLayout
        android:id="@+id/data_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:text="@string/original_json"
        style="@style/OriginalJSONLabel"/>

    <TextView
        android:id="@+id/original_json"
        android:text="@string/loading"
        style="@style/OriginalJSON"/>

  </LinearLayout>
</ScrollView>