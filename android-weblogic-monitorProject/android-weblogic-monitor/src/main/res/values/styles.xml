<!--

 * Created by jeffreyawest
 -->
<resources>

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Light">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name="ListEntityHeader">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/list_entity_header_text</item>
    <item name="android:text">Header</item>
  </style>

  <style name="ListEntityListView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:divider">@color/LightGrey</item>
    <item name="android:dividerHeight">@dimen/list_entity_divider_height</item>
  </style>

  <!-- DDDDDDDDDDDDDDDDDDDDDDDDDDDD -->

  <style name="ListItemRelativeLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/list_relative_layout_padding</item>
    <item name="android:layout_margin">20dp</item>
  </style>

  <style name="ListItemEntityName">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/list_entity_name_padding</item>
    <item name="android:paddingBottom">@dimen/list_entity_name_padding</item>
    <item name="android:textSize">@dimen/list_entity_name_text</item>
  </style>

  <style name="ListItemTable">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/list_item_table_padding</item>
  </style>

  <style name="ListItemTableRow">
    <item name="android:padding">@dimen/list_item_table_row_padding</item>
  </style>

  <style name="ListItemEntityDetails">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerVertical">true</item>

    <item name="android:textSize">@dimen/list_entity_details_text</item>
    <!--<item name="android:padding">@dimen/list_entity_details_padding</item>-->
    <item name="android:paddingLeft">@dimen/list_entity_details_padding_left</item>
  </style>

  <style name="ListItemEntityGraphic" parent="ListItemEntityDetails">
    <item name="android:layout_width">@dimen/list_entity_graphic_width_height</item>
    <item name="android:layout_height">@dimen/list_entity_graphic_width_height</item>
    <!--<item name="android:background">@color/LightGrey</item>-->
  </style>

  <style name="ListItemChevron">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">@dimen/list_chevron_text</item>
    <item name="android:text">@string/greater_than</item>
  </style>

  <style name="ListDomainEntities_Entity">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:padding">@dimen/domain_entity_list_padding</item>
    <item name="android:textSize">@dimen/domain_entity_list_text</item>
  </style>

  <style name="ListDomainEntitiesChevron">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">@dimen/domain_entity_list_chevron</item>
    <item name="android:text">@string/greater_than</item>
  </style>

  <style name="EndpointEntryHeader">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/endpoint_entry_header_text</item>
    <item name="android:paddingBottom">@dimen/endpoint_entry_header_padding_bottom</item>
  </style>

  <style name="EndpointEntryPassword">
    <item name="android:layout_gravity">right</item>
    <item name="android:layout_weight">8</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inputType">textPassword</item>
  </style>

  <style name="EndpointEntryFieldLabel">
    <item name="android:layout_width">@dimen/endpoint_entry_label_width</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/endpoint_entry_label_text</item>
  </style>

  <style name="EndpointEntryInputField">
    <item name="android:layout_gravity">right</item>
    <item name="android:layout_weight">8</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ButtonNext" parent="ButtonFullWidth">
    <item name="android:layout_height">@dimen/button_next_height</item>
    <item name="android:layout_width">fill_parent</item>
  </style>

  <style name="DisplayEntityHeader">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textSize">@dimen/display_entity_header_text</item>
    <item name="android:paddingBottom">@dimen/display_entity_header_padding</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="OriginalJSON">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/original_json_text</item>
  </style>

  <style name="GraphFragment_Header">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/graph_fragment_header_text</item>
    <item name="android:paddingBottom">@dimen/graph_fragment_header_padding</item>
  </style>

  <style name="GraphFragment_Graphic">
    <item name="android:layout_height">@dimen/graph_fragment_graphic_size</item>
    <item name="android:layout_width">@dimen/graph_fragment_graphic_size</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="GraphFragment_Legend">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="EntityGraphHeader">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="Card_Header">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/card_header_text</item>
    <item name="android:paddingBottom">5dp</item>
  </style>

  <style name="ButtonFullWidth">
    <item name="android:layout_height">@dimen/base_button_height</item>
    <item name="android:textSize">@dimen/base_button_text</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_centerVertical">true</item>
  </style>

  <style name="ButtonGetStarted" parent="ButtonFullWidth">
    <item name="android:padding">10dp</item>
  </style>

  <style name="WelcomeMessage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/welcome_text</item>
    <item name="android:padding">@dimen/welcome_padding</item>
  </style>

  <style name="CopyrightDisclaimer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">10sp</item>
    <item name="android:padding">@dimen/welcome_padding</item>
  </style>

  <style name="DisplayEntity_Backdrop" parent="Backdrop">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/activity_display_outer_text</item>
    <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
  </style>

  <style name="DisplayEntity_DetailContainer">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:background">@color/white</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:padding">5dp</item>
  </style>

  <style name="DisplayEntity_DetailTable">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:background">@color/white</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Card_Layout">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:background">@drawable/container_dropshadow</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">7dp</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="DisplayEntity_Parent">
    <item name="android:layout_width">wrap_content</item>
    <!--<item name="android:background">@drawable/container_dropshadow</item>-->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <!--<item name="android:paddingBottom">5dp</item>-->
    <!--<item name="android:layout_margin">5dp</item>-->
  </style>

  <style name="Backdrop">
    <item name="android:padding">10dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:background">@color/Gray52</item>
  </style>

</resources>
